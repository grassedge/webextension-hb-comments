{
  "manifest_version": 2,
  "name": "hb-comments",
  "description": "Show comments of Hatena::Bookmark",
  "version": "1.0.0",
  "permissions": ["https://*/*", "tabs", "activeTab"],
  "browser_action": {
    "default_title": "HB Comments",
    "default_popup": "dist/index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
